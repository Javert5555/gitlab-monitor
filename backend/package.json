{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "scan:semgrep": "docker run --rm -v $(pwd):/src semgrep/semgrep scan --config auto --json",
    "scan:checkov": "docker run --rm -v $(pwd):/src bridgecrew/checkov -d /src --output json",
    "scan:gitleaks": "docker run --rm -v $(pwd):/src zricethezav/gitleaks detect --source /src --format json",
    "scan:trivy": "docker run --rm -v $(pwd):/src aquasec/trivy fs --format json /src",
    "scan:all": "npm run scan:semgrep && npm run scan:checkov && npm run scan:gitleaks && npm run scan:trivy"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "description": "",
  "dependencies": {
    "axios": "^1.13.1",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "cron": "^4.3.4",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "js-yaml": "^4.1.1",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.11",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.7",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "nodemon": "^3.1.10"
  }
}
